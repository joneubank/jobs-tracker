{
  "name": "jobs-tracker",
  "version": "1.0.0",
  "description": "Track progress of Jobs running in your services through kafka notifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/index.js",
    "debug": "nodemon --delay 1000ms --inspect --watch  'src/**/*.ts' --exec node -r ts-node/register ./src/index.ts",
    "build": "rm -rf dist && mkdir dist && NODE_PATH=./src tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joneubank/jobs-tracker.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joneubank/jobs-tracker/issues"
  },
  "homepage": "https://github.com/joneubank/jobs-tracker#readme",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.180",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@elastic/elasticsearch": "7.5.0",
    "express": "^4.17.3",
    "kafkajs": "^1.16.0",
    "lodash": "^4.17.21",
    "winston": "^3.6.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowFunctionParentheses": "always",
    "printWidth": 120
  }
}
